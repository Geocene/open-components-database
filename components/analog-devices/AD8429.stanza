; Amplifiers
public pcb-component component :
  name = "AD8429"
  manufacturer = "Analog Devices"
  mpn = "AD8429BRZ-R7"
  description = "SP Amp INSTR Amp Single Â±18V 8-Pin SOIC N T/R"
  pin-properties :
    [pin:Ref | pads:Int ...   | side:Dir  ]
    [in- | 1 | Left]
    [rg0 | 2 | Left]
    [rg1 | 3 | Left]
    [in+ | 4 | Left]
    [vout | 7 | Right]
    [ref | 6 | Right]
    [vs- | 5 | Down]
    [vs+ | 8 | Up]
  make-box-symbol()
  assign-package(soic127p-package(8))

public pcb-module module (gain:Double) :
  pin vs+
  pin vs-
  pin in+
  pin in-
  pin vout
  pin ref
  inst opa : ocdb/analog-devices/AD8429/component
  if gain < 1.0 :
    fatal("Unsupported gain %_ for AD8429" % [gain])
  else if gain != 1.0 :
    val rg-val = 6.0e3 / (gain - 1.0)
    inst rg : chip-resistor(rg-val, 0.001)
    net (opa.rg0, rg.p[1])
    net (opa.rg1, rg.p[2])
  bypass-caps(vs+, ref, 35.0, [10.0 0.1e-3], `vs+)
  bypass-caps(vs-, ref, 35.0, [10.0 0.1e-3], `vs-)
  net (opa.in+, in+)
  net (opa.in-, in-)
  net (opa.vs+, vs+)
  net (opa.vs-, vs-)
  net (opa.vout, vout)
  net (opa.in+, in+)
  net (opa.ref, ref)

